<!-- Navbar -->
<div class="navbar">
  <div class="logo">Exploreo</div>
  <div class="nav-links">
    <a href="/" class="<%= page === 'home' ? 'active' : '' %>">Home</a>
    <a href="/destinations" class="<%= page === 'destinations' ? 'active' : '' %>">Destinations</a>
    <a href="/activities" class="<%= page === 'activities' ? 'active' : '' %>">Activities</a>
    <a href="/admin" class="<%= page === 'admin' ? 'active' : '' %>">Admin</a>
    
    <% if (locals.user) { %>
      <span style="color: #fff; margin-right: 10px;">Welcome, <%= user.name %>!</span>
      <a href="/logout" class="signup-btn">Logout</a>
    <% } else { %>
      <a href="/login" class="<%= page === 'login' ? 'active' : '' %>">Login</a>
      <a href="/signup" class="signup-btn">Sign up</a>
    <% } %>
  </div>
</div>

